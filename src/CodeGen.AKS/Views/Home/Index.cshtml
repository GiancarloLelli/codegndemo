@{
    ViewData["Title"] = "Kubernetes Orchestrator";
}

<script type="text/javascript">
    $(function () {
        CodeGen.Kubernetes.Index.onLoad();
    });
</script>

<main role="main" class="container">
    <h1 class="mt-5">Kubernetes orchestrator</h1>
    <p class="lead">Fire some PODs inside AKS by simple filling the form below</p>

    <div id="okMessage" class="alert alert-success d-none" role="alert">POD Deployed succesfully!</div>
    <div id="koMessage" class="alert alert-danger d-none" role="alert">There was an error deploying the POD, check the console for more info</div>

    <form>
        <div class="form-group">
            <label for="imageName">Image name</label>
            <input type="text" class="form-control" id="imageName" placeholder="giancarlolelli/ruby:primes">
        </div>
        <div class="form-group">
            <label for="podName">POD name</label>
            <input type="text" class="form-control" id="podName" placeholder="sample">
        </div>
        <div class="form-group">
            <label for="ns">Namespace</label>
            <input type="text" class="form-control" id="ns" placeholder="default">
        </div>
        <div class="form-group">
            <label for="ns">Count of instances to deploy</label>
            <input type="text" class="form-control" id="count" placeholder="1">
        </div>
        <div class="form-group">
            <label for="command">Command</label>
            <input type="text" class="form-control" id="command" placeholder="ruby">
        </div>
        <div class="form-group">
            <label for="cmd">Command arguments</label>
            <textarea class="form-control" id="cmd" rows="3" cols="10" placeholder="primes.rb"></textarea>
        </div>
        <button type="button" id="deployButton" class="btn btn-primary mb-2">Deploy</button>
    </form>
    <div>
        <canvas id="myChart" width="200" height="100"></canvas>
    </div>
</main>